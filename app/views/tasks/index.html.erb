<div class="text-end">
  <%= link_to 'New Task', new_task_path, class: 'btn btn-primary'%>
</div>

<table class="table">
  <thead>
    <tr scope="row">
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Body</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <th scope="row"><%= task.id %></th>
        <td><%= task.title %></td>
        <td><%= task.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
